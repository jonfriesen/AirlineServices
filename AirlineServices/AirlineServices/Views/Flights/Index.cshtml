@model IEnumerable<AirlineServices.Models.Flight>

@{
    ViewBag.Title = "Flight Schedule";
}

<h2>Flight Schedule</h2>

<p>
    @Html.ActionLink("Schedule a Flight", "Create")
</p>
<!-- Filtering Parameters -->
@using (Html.BeginForm())
{
    <div class="panel">
        @Html.Label("Source") @Html.DropDownList("source", new SelectList(ViewBag.Sources), htmlAttributes: new { @class = "form-control" })
        @Html.Label("Destination") @Html.DropDownList("destination", new SelectList(ViewBag.Destinations), htmlAttributes: new { @class = "form-control" })<br />
        <input class="btn btn-default" type="submit" value="Search" />
    </div>
}

<!-- Data Table -->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.departureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ticketPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.departureDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ticketPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
