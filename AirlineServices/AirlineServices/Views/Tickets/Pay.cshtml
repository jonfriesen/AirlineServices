@model AirlineServices.Models.Ticket

@{
    ViewBag.Title = "Pay";
}

<h2>Pay</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ticket</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
           @Html.DisplayNameFor(model => model.flight.id)
            <div class="col-md-10">
                @Html.DisplayFor(model => model.flight.id)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.passenger.FullName)
            <div class="col-md-10">
               @Html.DisplayFor(model => model.passenger.FullName)
            </div>
        </div>

        <div class="form-group">
            @Html.DisplayNameFor(model => model.AmountDue)
            <div class="col-md-10">
                $@Html.DisplayFor(model => model.AmountDue)
            </div>
        </div>

        <div class="form-group">
            Amount to pay
            <div class="col-md-10">
                @Html.EditorFor(model => model.AmountPaid, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AmountPaid, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Make Payment" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
